---
const today = new Date();
const copyYear = today.getFullYear();
---

<style>
svg {
	color: var(--c-main);
	margin: 0 0.5rem;
}

.fsection {
	margin-top: 1rem;
	padding: 1rem;
	width: 100%;
	background-color: var(--c-back-c1);
}
.fcopy {
	flex: 1 1 0;
	margin: 0 0 0.5rem 0;
}
.zm {
	margin: 0;
}
.fsmall {
	font-size: 0.9rem;
	color: var(--c-txt-dim);
}

.flinks {
	flex: 0 0 auto;
	text-align: center;

	display: flex;
	flex-direction: row;
	justify-content: center;
}

.flcard {
	display: flex;
	align-items: center;
	margin: 0.2rem;
}

@media screen and (min-width: 34rem) {
	.fcopy { margin: 0 2rem 0 0; }
	.flinks { flex-direction: column; }
}

@media screen and (min-width: 65rem) {
	.flinks { flex-direction: row; }
}
</style>

